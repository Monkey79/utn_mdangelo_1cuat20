int getInt(char *pStr, int iFrom, int iUntill){
	int iVal=0;

	do{
		printf("Ingrese un/una %s, recuerde [%d,%d]: ",pStr, iFrom, iUntill);
		scanf("%d",&iVal);
		__fpurge(stdin);
	}while(iVal<iFrom || iVal>iUntill);

	return iVal;
}
int getChar(char *pStr){
	char cVal;
	printf("Ingrese %s: ",pStr);
	scanf("%c",&cVal);
	__fpurge(stdin);
	return cVal;
}
float getFloat(char *pStr, int iFrom, int iUntil){
	float fVal;
	do{
		printf("Ingrese %s: [%.2f,%.2f]: ",pStr, iFrom, iUntil);
		scanf("%f",&fVal);
		__fpurge(stdin);
	}while(fVal<iFrom || fVal>iUntil);
	return fVal;
}
