char getChar(char *pMsj,char cVl1, char cVl2) {
	char cVal;
	do{
		printf("Ingrese %s solo valores: [%c,%c]: ",pMsj,cVl1, cVl2);
		scanf("%c",&cVal);
		cVal = toupper(cVal);
		__fpurge(stdin);
	}while(cVal != cVl1 && cVal != cVl2);
	return cVal;
}


