char getChar(char *pMsj,char cVl1, char cVl2) {
	char cVal;
	do{
		printf("Ingrese %s solo valores: [%c,%c]: ",pMsj,cVl1, cVl2);
		scanf("%c",&cVal);
		cVal = toupper(cVal);
		__fpurge(stdin);
	}while(cVal != cVl1 && cVal != cVl2);
	return cVal;
}

float getFloat(char *pMsj, float iFrom, float iUntil){
	float fVal;
	do{
		printf("Ingrese %s: [%.2f,%.2f]: ",pStr, iFrom, iUntil);
		scanf("%f",&fVal);
		__fpurge(stdin);
	}while(fVal<iFrom || fVal>iUntil);
	return fVal;
}

int getInt(char *pMsj, int iFrom, int iUntill){
	int iVal=0;
	do{
		printf("Ingrese un/una %s, recuerde [%d,%d]: ",pStr, iFrom, iUntill);
		scanf("%d",&iVal);
		__fpurge(stdin);
	}while(iVal<iFrom || iVal>iUntill);
	return iVal;
}


