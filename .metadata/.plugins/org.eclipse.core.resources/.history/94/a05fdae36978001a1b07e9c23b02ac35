int ejerc1Clase3Main(char *pStr, int iFrom, int iUntill){
	int iVal=0;

	do{
		printf("Ingrese un/una %s, recuerde [%d,%d]: ",pStr, iFrom, iUntill);
		scanf("%d",&iVal);
		__fpurge(stdin);
	}while(iVal<iFrom || iVal>iUntill);

	return iVal;
}

int getInt(char *pStr, int iFrom, int iUntill){
	int iVal=0;

	do{
		printf("Ingrese un/una %s, recuerde [%d,%d]: ",pStr, iFrom, iUntill);
		scanf("%d",&iVal);
		__fpurge(stdin);
	}while(iVal<iFrom || iVal>iUntill);

	return iVal;
}
int getChar(char *pStr){
	char cVal;
	printf("Ingrese %s",pStr);
	scanf("%c",%cVal);
	return cVal;
}
float getFloat(char *pStr){
	float fVal;
	printf("Ingrese %s",pStr);
	scanf("%f",%fVal);
	return fVal;

}
