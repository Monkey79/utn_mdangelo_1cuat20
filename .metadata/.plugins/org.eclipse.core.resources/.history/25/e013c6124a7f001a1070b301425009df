#include <stdio.h>
#include <stdlib.h>
#include <stdio_ext.h>

#include "ejrc1_clase6.h"
#include "../commons/utn_commons.h"

void clase5B(void){
	int notas[LENGTH];
	_initializeArray(notas);
	_showAllArrayContent(notas, LENGTH);
	_chargeArrayRandom(notas);
	_showAllArrayContent(notas, LENGTH);
}

void _initializeArray(int *pNotas) {
	for(int i=0; i<LENGTH-1; i++){
		*(pNotas+i) = 0;
	}
}


