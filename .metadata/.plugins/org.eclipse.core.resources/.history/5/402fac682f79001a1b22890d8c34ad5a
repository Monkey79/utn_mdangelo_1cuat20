int getFactorial(){
	int iNum = 1;
	int iFact = 1;

	do{
		printf("Ingrese un numero positivo para calcular su factorail: ");
		scanf("%d",&iNum);
		__fpurge(stdin);
	}while(iNum<0);

	for(int i=iNum;i>0;i--){
		iFact = iFact*i;
	}
	return iFact;
}
